{% extends "BVDSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
	<div class="panel panel-danger">
		<div class="panel-heading">
			<h3 class="panel-title">Erreur d'indentification</h3>
		</div>
		<div class="panel-body">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	</div>
{% endif %}

<form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
	<fieldset>
	<legend>Page de connexion</legend>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="form-group">
    	<label class="col-md-4 control-label" for="username">{{ 'security.login.username'|trans }}</label>
    	<div class="col-md-4">
    		<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Nom d'utilisateur" class="form-control input-md"/>
    	</div>
	</div>

	<div class="form-group">
    	<label class="col-md-4 control-label" for="password">{{ 'security.login.password'|trans }}</label>
    	<div class="col-md-4">
    		<input type="password" id="password" name="_password" required="required" placeholder="Mot de passe" class="form-control input-md"/>
    	</div>
	</div>

	<div class="form-group">
	  <label class="col-md-4 control-label" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
	  <div class="col-md-4">
	    <input type="checkbox" id="remember_me" name="_remember_me" value="1" />
	  </div>
	</div>

	<div class="form-group">
	  <label class="col-md-4 control-label" for="_submit"></label>
	  <div class="col-md-4">
	    <input type="submit" id="_submit" name="_submit" class="btn btn-primary" value="{{ 'security.login.submit'|trans }}" />
	  </div>
	</div>
</fieldset>
</form>


{% endblock fos_user_content %}
