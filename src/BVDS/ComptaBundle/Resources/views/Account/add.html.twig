{% extends 'BVDSComptaBundle::layout.html.twig' %}

{% block corps %}
	{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

	{{ form_errors(form) }}

	<div class="form-group">
		{{ form_label(form.nom, "Nom du compte : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
		{{ form_errors(form.nom) }}
    	<div class="col-md-4">
    		{{ form_widget(form.nom, {'attr': {'class': 'form-control input-md'}}) }}
    	</div>
	</div>

	<div class="form-group">
		<label class="col-md-4 control-label" for="_submit"></label>
		<div class="col-md-8">
			{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
			<a href="{{ path('bvds_compta_homepage') }}" class="btn btn-danger"/>Retour Ã  la liste des comptes</a>
	  	</div>
	</div>

	{{ form_rest(form) }}

	{{ form_end(form) }}
{% endblock %}