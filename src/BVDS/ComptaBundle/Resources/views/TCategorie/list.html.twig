{% extends 'BVDSComptaBundle::layout.html.twig' %}

{% block corps %}
	<h3>Liste des categories</h3>

	{% for message in app.session.flashbag.get('notice') %}
		<div class="panel panel-success">
			<div class="panel-heading">
				<h3 class="panel-title">Message</h3>
			</div>
			<div class="panel-body">{{ message }}</div>
		</div>    
    {% endfor %}

	<table class="table table-striped table-responsive">
		<thead>
			<tr>
				<th>ID</th>
				<th>Libelle</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for categorie in liste %}
				<tr>
					<td><a href="">{{ categorie.id }}</a></td>
					<td>{{ categorie.libelle }}</td>
					<td><button class="btn btn-primary">M</button>&nbsp;<a href="#" class="btn btn-danger">X</a></td>
				</tr>
    		{% endfor %}
		</tbody>
		<tfoot>
			<tr>
				<td colspan="4"><a class="btn btn-success" href="{{ path("bvds_compta_transcategories_add") }}">Ajouter une cat√©gorie</a></td>	
			</tr>
		</tfoot>
	</table>
{% endblock %}